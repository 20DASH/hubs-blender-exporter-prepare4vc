{
  "gltfExtensionName": "MOZ_hubs_components",
  "gltfExtensionVersion": 3,
  "components": {
    "kit": {
      "scene": true,
      "node": false,
      "properties": {
        "authorName": {
          "type": "string"
        },
        "authorUrl": {
          "type": "string"
        },
        "license": {
          "type": "string"
        }
      }
    },
    "kit-piece": {
      "properties": {
        "id": {
          "type": "string",
          "default": "$name"
        },
        "name": {
          "type": "string",
          "default": "$name"
        },
        "tags": {
          "type": "collections",
          "collectionPrefix": "KIT_"
        }
      }
    },
    "kit-alt-materials": {
      "node": true,
      "properties": {
        "defaultMaterial": {
          "type": "material"
        },
        "materials": {
          "type": "array",
          "arrayType": "material"
        }
      }
    }
  }
}