{
  "gltfExtensionName": "MOZ_hubs_components",
  "gltfExtensionVersion": 3,
  "types": {
    "MaterialItem": {
      "properties": {
        "value": {
          "type": "material"
        }
      }
    },
    "MaterialCollection": {
      "properties": {
        "value": {
          "type": "array",
          "arrayType": "MaterialItem"
        }
      }
    },
    "TaggedMaterial": {
      "properties": {
        "name": {
          "type": "string",
          "default": "$name"
        },
        "material": {
          "type": "material"
        }
      }
    }
  },
  "components": {
    "kit": {
      "scene": true,
      "node": false,
      "properties": {
        "authorName": {
          "type": "string"
        },
        "authorUrl": {
          "type": "string"
        },
        "license": {
          "type": "string"
        }
      }
    },
    "kit-piece": {
      "properties": {
        "id": {
          "type": "string",
          "default": "$name"
        },
        "name": {
          "type": "string",
          "default": "$name"
        },
        "tags": {
          "type": "collections",
          "collectionPrefix": "KIT_"
        }
      }
    },
    "kit-alt-materials": {
      "node": true,
      "properties": {
        "defaultMaterials": {
          "type": "array",
          "arrayType": "TaggedMaterial"
        },
        "altMaterials": {
          "type": "array",
          "arrayType": "MaterialCollection"
        }
      }
    }
  }
}